<h2 class="mb-4">Prijava</h2>

@if (TempData["Poruka"] != null)
{
    <div class="alert alert-success">
        @TempData["Poruka"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        <label class="font-weight-bold">Korisničko ime</label>
        <input type="text" name="korisnickoIme" class="form-control" placeholder="Unesite korisničko ime" />
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Lozinka</label>
        <input type="password" name="lozinka" class="form-control" placeholder="Unesite lozinku" />
    </div>
    <button type="submit" class="btn btn-primary">Prijava</button>
}

@if (ViewBag.Poruka != null)
{
    <div class="mt-3 alert alert-danger">
        @ViewBag.Poruka
    </div>
}
